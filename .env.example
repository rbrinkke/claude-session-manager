# Claude Session Manager Configuration

# Database (monitoringdb)
DATABASE_URL=postgresql+asyncpg://postgres:YOUR_PASSWORD@localhost:5441/monitoringdb

# API URLs (k3d cluster NodePorts)
CHAT_API_URL=http://localhost:30001
AUTH_API_URL=http://localhost:30012
SOCIAL_API_URL=http://localhost:30005

# Monitor Organization ID
MONITOR_ORG_ID=YOUR_ORG_ID

# Session limits
MAX_SESSIONS=10
DEFAULT_MAX_COST_USD=10.0

# Polling intervals (seconds)
CHAT_POLL_INTERVAL=2.0
HEARTBEAT_INTERVAL=30.0
LOG_CLEANUP_INTERVAL=3600.0

# Paths
LOG_DIR=/var/log/claude
WORKING_DIR=/home/rob

# Claude binary
CLAUDE_BIN=/home/rob/.local/bin/claude

# Logging
LOG_LEVEL=INFO
